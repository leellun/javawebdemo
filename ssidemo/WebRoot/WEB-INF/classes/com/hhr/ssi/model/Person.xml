<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hhr.ssi.model.Person">
	<resultMap type="com.hhr.ssi.model.Person" id="person">
		<id column="id" property="id"/>
		<result column="name" property="name"/>
		<result column="card_id" property="card_id"/>
	</resultMap>
	<insert id="savePerson">
	insert into person(id,name,card_id) values(
		id,#{name},#{card_id}
	)
	</insert>
	<sql id=""></sql>
	<update id="updatePerson">
	update person
		set name=#{name},card_id=#{card_id}
		where id=#{id}
	</update>
	<select id="getPerson">
	select * from person where id=#{id}
	</select>
</mapper>